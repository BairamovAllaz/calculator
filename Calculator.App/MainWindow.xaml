<Window x:Class="Calculator.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Calculator.App"
        mc:Ignorable="d"
        Title="Calculator" Height="550" Width="400" Background="MidnightBlue">
    <Window.Resources>
        <ResourceDictionary Source="Style/Styles.xaml"/>
    </Window.Resources>
    <StackPanel>
        <StackPanel>
            <TextBox x:Name="InputBox"
                     Style="{StaticResource Style_inputBox}"/>
        </StackPanel>
        <StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Button Content="7" 
                                Grid.Row="0" Grid.Column="0"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="8" 
                                Grid.Row="0" Grid.Column="1"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="9" 
                                Grid.Row="0" Grid.Column="2"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="4" 
                                Grid.Row="1" Grid.Column="0"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="5" 
                                Grid.Row="1" Grid.Column="1"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="6" 
                                Grid.Row="1" Grid.Column="2"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="1" 
                                Grid.Row="2" Grid.Column="0"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="2" 
                                Grid.Row="2" Grid.Column="1"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="3" 
                                Grid.Row="2" Grid.Column="2"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="CE" 
                                Grid.Row="3" Grid.Column="0"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="0" 
                                Grid.Row="3" Grid.Column="1"
                                Style="{StaticResource Style_ButtonDefault}"/>
                        <Button Content="." 
                                Grid.Row="3" Grid.Column="2"
                                Style="{StaticResource Style_ButtonDefault}"/>    
                    </Grid>
                <StackPanel Grid.Column="1">
                    <Button Content="1" Style="{StaticResource Style_ButtonDefault}"/>
                    <Button Content="1" Style="{StaticResource Style_ButtonDefault}"/>
                    <Button Content="1" Style="{StaticResource Style_ButtonDefault}"/>
                    <Button Content="1" Style="{StaticResource Style_ButtonDefault}"/>
                    <Button Content="1" Style="{StaticResource Style_ButtonDefault}"/>
                    <Button Content="1" Style="{StaticResource Style_ButtonDefault}"/>
                </StackPanel>
            </Grid>
        </StackPanel>
    </StackPanel>
</Window>
